<header>
  <div class="center-block text-center">
    <h3>
    <%= link_to " Rails made in France", root_path, class: "fa fa-diamond fa-2x" %>
    </h3>
  </div>
</header>

<nav class="navbar navbar-default mega-nav">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#MainMenu" aria-expanded="false">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="MainMenu">
      <ul class="nav navbar-nav menu-list">
        <li><%= link_to "Accueil", root_path %></li>
        <li><%= link_to "Categories", categories_path %></li>
      </ul>
      <form id="mega-search" class="navbar-form navbar-right">
        <div class="input-group">
          <%= form_tag articles_path, :method => 'Get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", class: "fa fa-search"%>
        <% end %>
        </div>
      </form>
    </div>
  </div>
</nav>
